version: '3.8'

# Development override for docker-compose.yml
# This file is automatically merged with docker-compose.yml in development

services:
  news-api:
    build:
      context: ./services/news-api
      dockerfile: Dockerfile
      target: builder  # Use builder stage for development
    volumes:
      - ./services/news-api/src:/app/src:ro
    environment:
      - NODE_ENV=development
      - LOG_LEVEL=debug
      - DEBUG=*
      - RUST_LOG=debug
      - RUST_BACKTRACE=1
    command: cargo watch -x run  # Hot reload for Rust

  news-dashboard:
    build:
      context: ./services/news-dashboard
      dockerfile: Dockerfile.dev
    volumes:
      - ./services/news-dashboard/src:/app/src:ro
      - ./services/news-dashboard/public:/app/public:ro
    environment:
      - NODE_ENV=development
      - VITE_API_URL=http://localhost:8800/api
      - CHOKIDAR_USEPOLLING=true
    command: npm run dev
    ports:
      - "5173:5173"  # Vite dev server

  admin-dashboard:
    build:
      context: ./services/admin-dashboard
      dockerfile: Dockerfile.dev
    volumes:
      - ./services/admin-dashboard/src:/app/src:ro
      - ./services/admin-dashboard/public:/app/public:ro
    environment:
      - NODE_ENV=development
      - VITE_API_URL=http://localhost:8800/api
      - CHOKIDAR_USEPOLLING=true
    command: npm run dev
    ports:
      - "5174:5174"  # Vite dev server

  nginx:
    volumes:
      - ./services/nginx/nginx.conf:/etc/nginx/nginx.conf:ro
