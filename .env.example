# ================================
# Barami Project Environment Variables
# ================================

# --------------------------------
# Application Environment
# --------------------------------
NODE_ENV=production
LOG_LEVEL=info

# --------------------------------
# PostgreSQL Configuration
# --------------------------------
POSTGRES_HOST=baram-postgres
POSTGRES_PORT=5432
POSTGRES_DB=barami
POSTGRES_USER=barami
POSTGRES_PASSWORD=your_secure_password_here

# PostgreSQL Connection Pool
POSTGRES_POOL_MIN=2
POSTGRES_POOL_MAX=10

# --------------------------------
# OpenSearch Configuration
# --------------------------------
OPENSEARCH_HOST=baram-opensearch
OPENSEARCH_PORT=9200
OPENSEARCH_USERNAME=admin
OPENSEARCH_PASSWORD=your_opensearch_password_here
OPENSEARCH_SSL=false

# --------------------------------
# News API Configuration
# --------------------------------
NEWS_API_PORT=8080
CORS_ORIGIN=*
API_RATE_LIMIT=100
API_TIMEOUT=30000

# --------------------------------
# Dashboard Configuration
# --------------------------------
# News Dashboard
NEWS_DASHBOARD_PORT=3001
REACT_APP_API_URL=http://localhost:8800/api
REACT_APP_WS_URL=ws://localhost:8800/api/ws

# Admin Dashboard
ADMIN_DASHBOARD_PORT=3002
REACT_APP_GRAFANA_URL=http://localhost:8800/grafana
REACT_APP_PROMETHEUS_URL=http://localhost:8800/prometheus

# --------------------------------
# Nginx Configuration
# --------------------------------
NGINX_PORT=8800
NGINX_WORKER_PROCESSES=auto
NGINX_WORKER_CONNECTIONS=1024

# --------------------------------
# Monitoring Configuration
# --------------------------------
# Grafana
GRAFANA_HOST=baram-grafana
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=your_grafana_password_here

# Prometheus
PROMETHEUS_HOST=baram-prometheus
PROMETHEUS_PORT=9090

# Postgres Exporter
POSTGRES_EXPORTER_PORT=9187

# --------------------------------
# Security & Authentication
# --------------------------------
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRATION=24h
SESSION_SECRET=your_session_secret_here

# --------------------------------
# Redis Configuration (Optional)
# --------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# --------------------------------
# External API Keys (Optional)
# --------------------------------
# Add any external API keys here
# OPENAI_API_KEY=your_openai_api_key_here
# ANTHROPIC_API_KEY=your_anthropic_api_key_here

# --------------------------------
# Feature Flags
# --------------------------------
ENABLE_WEBSOCKET=true
ENABLE_CACHING=true
ENABLE_RATE_LIMITING=true

# --------------------------------
# Email Configuration (Optional)
# --------------------------------
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@barami.local

# --------------------------------
# Storage Configuration
# --------------------------------
UPLOAD_MAX_SIZE=20971520
UPLOAD_PATH=/tmp/uploads

# --------------------------------
# Crawler Configuration
# --------------------------------
CRAWLER_INTERVAL=3600
CRAWLER_CONCURRENT_LIMIT=5
CRAWLER_USER_AGENT=Barami/1.0

# --------------------------------
# Development Only
# --------------------------------
# Uncomment for development
# DEBUG=*
# PRETTY_LOGS=true
# HOT_RELOAD=true
